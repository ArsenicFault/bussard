-- -*- lua -*-

local _env, args = ...

if(tonumber(args[1])) then
   local success, msg = refuel(tonumber(args[1]))
   assert(success, msg)
   print(msg)
else
   print("Purchase fuel for your ship.\n")
   print("Usage:")
   print("  refuel AMOUNT")
   local price = fuel_price()
   if(price) then
      print("Fuel here is sold for " .. price)
   else
      print("This station does not sell fuel.")
   end
end

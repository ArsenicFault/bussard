-- -*- lua -*-

local env, args = ...

if(args[1] == "--help") then
   print("Print the contents of a file or files.")
   print("Usage:")
   print("  cat FILE1 [FILE2 ...]")
else
   for _,filename in ipairs(args) do
      if(io.exists(filename, env.CWD)) then
         print(filename .. ":")
         print(io.readfile(filename, env.CWD))
         print("")
      else
         print(filename .. " not found.")
      end
   end
end

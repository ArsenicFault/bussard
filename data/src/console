-- -*- lua -*-

local prompt = "> "

define_mode("console")
ship.modes.console.parent = ship.modes.edit -- most keys work like in edit mode

bind("console", "return", function()
        local input = string.sub(ship.editor.get_line(0), string.len(prompt)+1)
        loadstring(input)
end)

